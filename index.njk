---
pagination:
  data: collections.haiku
  size: 1
  alias: haiku
  before: haikus => haikus.sort(() => 0.5 - Math.random())
permalink: "/"
---

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Accrue Haiku</title>
  <link rel="stylesheet" href="/src/styles.css">
</head>
<body>
    <nav class="menu">
        <button id="menuToggle" class="menu-icon">â˜°</button>
        <ul id="menuList" class="menu-items">
            <li><a href="/">Home</a></li>
            <li><a href="https://jdiswriting.com" target="_blank" rel="noopener noreferrer">Blog</a></li>
            <li><a href="/about/">About</a></li>

    </ul>
    </nav>
  <main>

    <article>
      <h2>{{ haiku.data.title }}</h2>
      <pre>{{ haiku.templateContent | safe }}</pre>
      <small>- {{ haiku.data.author }}</small>
    </article>

    <form onsubmit="fadeOut(event)">
      <button type="submit"><b>Another</b></button>
    </form>
    
    <script>
        function fadeOut(e) {
            e.preventDefault();
            document.querySelector("main").classList.add("fade-out");
            setTimeout(() => {
                window.location.reload();
            }, 400);
        }
    </script>
  </main>
  <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", user => {
      if (!user) {
        const params = new URLSearchParams(window.location.search);
        if (params.get("confirmation_token")) {
          // Redirect to admin if token is in URL
          window.location.href = "/admin/";
        }
      }
    });
    window.netlifyIdentity.init();
  }
</script>
</body>
</html>

<script>
  const menuButton = document.getElementById("menuToggle");
  const menuList = document.getElementById("menuList");

  menuButton.addEventListener("click", () => {
    menuList.classList.toggle("show");
  });

  // Optional: close menu when clicking a link
  menuList.querySelectorAll("a").forEach(link => {
    link.addEventListener("click", () => {
      menuList.classList.remove("show");
    });
  });
</script>

<script>
  // Fade-out on button click
  function fadeOut(e) {
    e.preventDefault();
    const main = document.querySelector("main");
    main.classList.remove("fade-in");
    main.classList.add("fade-out");
    setTimeout(() => {
      window.location.reload();
    }, 400);
  }

  // Fade-in on page load
  window.addEventListener("DOMContentLoaded", () => {
    document.querySelector("main").classList.add("fade-in");
  });
</script>